{
  "dependencies": {
    "@tailwindcss/cli": "^4.0.3",
    "tailwindcss": "^4.0.3"
  },
  
  "scripts": {
    "start": "react-scripts start",
    "build-css": "tailwindcss build -i ./src/input.css -o ./dist/output.css",
    "watch-css": "tailwindcss -i ./src/input.css -o ./dist/output.css -w",
    "dev": "concurrently \"npm run watch-css\" \"npm start\""
  }

}
